<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Date Picker App</masterLabel>
    <description>Date Picker component for Experience Builder</description>
    <targets>
        <target>lightningCommunity__Default</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Page_Layout</target>
        <target>lightningCommunity__Theme_Layout</target>
        </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property
        name="startDate"
        type="String"
        label="Start Date"
        description="Start date in YYYY-MM-DD"
      />
            <property
        name="endDate"
        type="String"
        label="End Date"
        description="End date in YYYY-MM-DD"
      />
            <property
        name="excludedDates"
        type="String"
        label="Excluded Dates"
        description="Comma-separated dates to disable (optional)"
      />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
